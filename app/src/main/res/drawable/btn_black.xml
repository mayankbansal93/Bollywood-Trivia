<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#343434" />
            <stroke
                android:width="1dp"
                android:color="#2a7d7d" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#60d4d6"
                android:endColor="#2a5b5c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#60d4d6" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>