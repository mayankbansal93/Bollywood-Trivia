<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_black"
        android:weightSum="100"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hint_ll1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Remove  Letters"
            android:minHeight="60dp"
            android:layout_weight="89"
            android:background="@drawable/btn_black"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:id="@+id/hint_tv1"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:id="@+id/separator_tv1"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:background="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coin"
            android:layout_weight="5"
            android:id="@+id/hint_iv1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30  "
            android:layout_weight="5"
            android:textColor="#ffffff"
            android:id="@+id/hint_tv2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000000"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_black"
        android:weightSum="100"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hint_ll2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Fill  Vowels"
            android:minHeight="60dp"
            android:background="@drawable/btn_black"
            android:layout_weight="89"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:id="@+id/hint_tv3"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:id="@+id/separator_tv2"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:background="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coin"
            android:layout_weight="5"
            android:id="@+id/hint_iv2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30  "
            android:layout_weight="5"
            android:textColor="#ffffff"
            android:id="@+id/hint_tv4"/>

    </LinearLayout>

</LinearLayout>